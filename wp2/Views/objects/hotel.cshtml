<script>

    var modal_hotel_details = {};

    modal_hotel_details.load = () => {

        $(document).ready(function () {
            $(".modal").on('show.bs.modal', function () {
                setTimeout(function () {

                    var galleryTop = new Swiper('.modal_hotel_details', {
                        spaceBetween: 10,
                        loop: true,
                        keyboard: {
                            enabled: true,
                        },
                        pagination: {
                            el: ".swiper-pagination",
                            type: "fraction",
                        },
                        navigation: {
                            nextEl: '.swiper-button-next',
                            prevEl: '.swiper-button-prev',
                        },
                    });

                }, 500);
            });
        });

        // load calendars
        modal_hotel_details.calendars_int();

    }


    modal_hotel_details.calendars_int = async () => {

        // Datepicker - check in
        $("#calendar_date_from").datepicker({
            dateFormat: 'yy-mm-dd',
            firstDay: 1,
            minDate: 0,
            defaultDate: 1,

            onSelect: function (date) {
                $("#calendar_date_until").datepicker("setDate", date);
            },

            onClose: function () {
                $("#calendar_date_until").datepicker("show");
            }

        });

        // Datepicker - check out
        $("#calendar_date_until").datepicker({
            dateFormat: 'yy-mm-dd',
            firstDay: 1,
            minDate: 0,
            defaultDate: 3,

        });

        // set dates
        $("#calendar_date_from").datepicker("setDate", "@date_from");
        $("#calendar_date_until").datepicker("setDate", "@date_until");

    }

    modal_hotel_details.load();

    var pop_up_gallery = {};

    // load function
    pop_up_gallery.load = () => {

        // UI components
        pop_up_gallery.ui.gallery_swipper();

        // BL components
        pop_up_gallery.bl.pop_up_gallery("pop_up_gallery", "open_pop_up_gallery");

    }

    // UI logic
    pop_up_gallery.ui = new function () {

        // Swiper
        this.gallery_swipper = function () {

            // Swiper
            var galleryThumbs = new Swiper('.gallery-thumbs', {
                spaceBetween: 10,
                slidesPerView: 2,
                loop: true,
                freeMode: true,
                loopedSlides: 5, //looped slides should be the same
                watchSlidesVisibility: true,
                watchSlidesProgress: true,
                breakpoints: {
                    575: {
                        slidesPerView: 3,
                        spaceBetween: 10
                    },
                    // when window width is >= 480px
                    767: {
                        slidesPerView: 4,
                        spaceBetween: 10
                    },
                    // when window width is >= 640px
                    1199: {
                        slidesPerView: 7,
                        spaceBetween: 10
                    }
                }
            });
            var galleryTop = new Swiper('.gallery-top', {
                spaceBetween: 10,
                loop: true,
                keyboard: {
                    enabled: true,
                },
                loopedSlides: 5, //looped slides should be the same
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                thumbs: {
                    swiper: galleryThumbs,
                },
            });


        }



    };

    // BL logic
    pop_up_gallery.bl = new function () {

        this.pop_up_gallery = function (id, btn_class) {

            let pop_up_gallery_id = document.getElementById(id);
            let pop_up_gallery_close = pop_up_gallery_id.getElementsByClassName("pop_up_gallery_close")[0];

            // Close
            pop_up_gallery_close.onclick = function () {
                pop_up_gallery_id.classList.remove("open");
            }

            let button = document.querySelector("." + btn_class);

            button.addEventListener("click", function () {
                pop_up_gallery_id.classList.add("open");
            })

            // Key ESC to close pop up
            document.addEventListener("keydown", function (e) {

                if (e.key === "Escape") {
                    pop_up_gallery_id.classList.remove("open");
                }

            });

        }

    }

    // On load
    pop_up_gallery.load();

</script>